@model List<Employee>
<h2>List of Employees</h2
<div>
    <table class="table">
        <thead>
		<tr>
			<th>Employ Id</th>
			<th>Name</th>
			<th>Department</th>
			<th>Salary</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var emp in Model)
		{
			<tr>
				<td>@emp.Id</td>
				<td>@emp.Name</td>
				<td>@emp.Department</td>
				<td>@emp.Salary</td>

				<td>
					<a asp-action="Edit" asp-routeid="@emp.Id">Edit</a> |
					<a asp-action="Details" asp-routeid="@emp.Id">Details</a> |
					<a asp-action="Delete" asp-routeid="@emp.Id">Delete</a>
					<!-- <a asp-action="Delete" asp-routeid="@emp.Id" onclick="return confirm('are you sure to
					delete?')">Delete</a> -->
				</td>
			</tr>
		}
    </tbody>
    </table>

</div>
